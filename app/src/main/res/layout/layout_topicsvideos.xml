<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/_135sdp"
        android:layout_height="@dimen/_160sdp"
        android:layout_margin="@dimen/_3sdp"
        android:background="@drawable/squarecorners">

        <ImageView
            android:id="@+id/imgthumbvid"
            android:layout_width="@dimen/_135sdp"
            android:layout_height="@dimen/_75sdp"
            android:background="@drawable/squarecorners"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/ic_video" />

        <TextView
            android:id="@+id/txtvidname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgthumbvid"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="PCMB"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtviddes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtvidname"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="Coursedes"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtviddur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtviddes"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="Durationn"
            android:textColor="@color/black"
            android:textSize="12sp"
          />


    </RelativeLayout>

</RelativeLayout>